<div class="row">
  <% for(var i = 0; i < posts.length; i++){ %>
  <% if(i < 2){ %>
  <div class="col-12 col-sm-6">
    <h1><%= posts[i].title %></h1>
    <img style="width: 100%;" src="<%= posts[i].img %>" alt="Imagem da postagem">
